
#include <iostream>

using namespace std;

int main()
{
   int opcion ;
   float a,b,r;
      do
   {
       cout<<"Ingresar a:"<<endl;
       cin>>a;
       cout<<"Ingresar b:"<<endl;
       cin>>b;
       cout<<"menu"<<endl;
       cout<<"1.Suma "<<endl;
       cout<<"2.Resta "<<endl;
       cout<<"3.Multiplicacion "<<endl;
       cout<<"4.Division "<<endl;
       cout<<"0.Salir"<<endl;
       cout<<"Elige una opcion: "<<endl;
       cin>>opcion;
       switch (opcion)
   {
       case 1:r=a+b;
       case 2:r=a-b;
       case 3:r=a*b;
       case 4:r=a/b;
       case 0:cout<<"Salir"<<endl;break;
       default: cout<<"Opcion invalida"<<endl;
   }
   if ((opcion>=1) && (opcion<=4))
   cout<<"El resultado es: "<<r<<endl;
   }
   while (opcion!=0);
    return 0;
}
