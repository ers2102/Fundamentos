#include <iostream>

using namespace std;

int main()

{
    float parcial1,parcial2,parcial3,final,proyecto,nota;
    cout<<"Ingresar nota de examen parcial: ";
    cin>>parcial1;
    cout<<"Ingresar nota de examen parcial: ";
    cin>>parcial2;
    cout<<"Ingresar nota de examen parcial: ";
    cin>>parcial3;
    cout<<"Ingresar nota de examen final: ";
    cin>>final;
    cout<<"Ingresar nota de proyecto final: ";
    cin>>proyecto;
    nota=((parcial1+parcial2+parcial3)/3*0.4)+final*0.4+proyecto*0.2;
    cout<<"La nota final es: "<<nota;
    if (nota >=51)
    cout<<" Esta aprobado";
    else
    cout<<" Esta reprobado";
    return 0;
}
