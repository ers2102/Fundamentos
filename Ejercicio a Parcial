
#include <iostream>

using namespace std;

int main()
{
    int N, M, c;
    float promedio, suma=0;
    do 
    {
        cout << "Ingrese el valor de N: ";
        cin >> N;
    } while (N < 0);
    do 
    {
        cout << "Ingrese el valor de M: ";
        cin >> M;
    } while ((M < 0) || (M < N));


    c = N;
    while (c <= M)
    {
        suma = suma + c; //suma+=c;
        c++; //c=c+1
    }
    cout << "La suma es: " << suma << endl; 
    promedio = suma / (M - N + 1);
    cout << "El promedio es: " << promedio;
}
