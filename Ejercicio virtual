#include <iostream>
#define MAX 100

using namespace std;

void cargar(double a[], int tamano);
void mostrar(double a[], int tamano);
double promedio(double a[], int tamano);

int main()
{
    int n;
    double vec[MAX];
    
    //Validar la entrada
    do
    {
        cout<<"Ingresar el nÃºmero de elementos: ";
        cin>>n;
    }
    while((n<0)||(n>MAX));
    cargar(vec,n);
    cout<<"El promedio de elementos del vector es: "<<promedio(vec,n);
    cout<<endl<<"para el vector: ";
    mostrar(vec,n);

    return 0;
}

void cargar(double a[], int tamano)
{
    //Pide los elementos del vector o arreglo
    for(int i=0;i<tamano;i++)
    {
        cout<<"Ingresa el elemento "<<i<<" :";
        cin>>a[i];
    }
}
void mostrar(double a[], int tamano)
{
    for(int i=0;i<tamano;i++)
    {
        cout<<a[i];
    }
}
double promedio(double a[], int tamano)
{
    double suma=0,prom;
    for(int i=0;i<tamano;i++)
    {
        suma=suma+a[i];
    }
    prom=suma/tamano;
    
    return prom;
}
