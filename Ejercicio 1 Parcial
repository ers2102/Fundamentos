#include <iostream>

using namespace std;

int main()
{
    float area,perimetro,b,h;
    cout<<"***Programa que calcula el area y perimetro de un rectangulo***"<<endl;
    cout<<"Ingrese la altura: "<<endl;
    cin>>h;
    cout<<"Ingrese la base: "<<endl;
    cin>>b;
    if ((b>0) && (h>0))
        {
        area=h*b;
        perimetro=2*h+2*b;
        cout<<"El area del rectangulo es de: "<<area<<endl;
        cout<<"El perimetro es de: "<<perimetro;
        }
    else 
    {
        cout<<"Error";
    }

    return 0;
}
