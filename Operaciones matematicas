#include <iostream>

using namespace std;

int main()
{
    float dato1,dato2,dato3,suma,resta,multiplicacion,division;
    cout<<"Ingresar dato 1";
    cin>>dato1;
    cout<<"Ingresar dato 2";
    cin>>dato2;
    cout<<"Ingresar dato 3";
    cin>>dato3;
    suma=dato1+dato2+dato3;
    cout<<" La suma es: "<<suma;
    resta=dato1-dato2-dato3;
    cout<<" La resta es: "<<resta;
    multiplicacion=dato1*dato2*dato3;
    cout<<" La multiplicacion es: "<<multiplicacion;
    division=dato1/dato2/dato3;
    cout<<" La division es: "<<division;

    return 0;
}
